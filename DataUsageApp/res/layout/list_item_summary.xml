    android:background="#000" > -->
    
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    android:orientation="vertical"
    android:visibility="visible" >
    
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal" >

       <TextView
           android:id="@+id/txtName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:paddingLeft="5dp"
           android:text="Name:"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#FFFF" />

       <TextView
           android:id="@+id/totaldata"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignBottom="@+id/btnShow"
           android:layout_alignParentLeft="true"
           android:layout_weight="0.57"
           android:paddingLeft="5dp"
           android:text="Total Data Used"
           android:textAppearance="?android:attr/textAppearanceLarge"
           android:textColor="#FFFF"
           android:textSize="16sp" />

       <ImageButton
           android:id="@+id/btnShow"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:background="#000"
           android:padding="5dp"
           android:src="@drawable/dataicon" />
   </LinearLayout>
 
      <LinearLayout
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
      <Spinner
          android:id="@+id/spinMonth"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:entries="@array/months_array"
          android:prompt="@string/month_prompt"
          android:spinnerMode="dropdown"
          android:background="@android:drawable/btn_dropdown" />
      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
          
          <View
          android:id="@+id/view1"
          style="@style/list_divider_bl"
          android:layout_width="fill_parent"
          android:layout_height="1sp"
          android:layout_alignParentLeft="true"
          android:layout_below="@+id/btnShow"
          android:layout_marginTop="30dp" />
      </LinearLayout>

</LinearLayout>